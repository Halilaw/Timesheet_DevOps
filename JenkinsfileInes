  pipeline 
   {
   environment {
		registry = "timesheet_devops1"
		registryCredential = 'ines18'
		dockerImage = '' }
		
         agent any
stages {
      stage("Cloning Project") {
      steps {
      git branch: 'ines', url: 'https://github.com/Halilaw/Timesheet_DevOps.git'
            }}
              stage("Build") {
       steps {
       
       bat "mvn clean install"
             }}

      stage("Unit tests") {
       steps {
       
       bat "mvn test"
             }}
    
	  stage("test statique") {
       steps{
		bat "mvn sonar:sonar "		
			}}
	  stage ("clean et packaging") {    
       steps {
         bat "mvn clean package "
			}}

      stage("DEPLOY with Nexus") {
      steps {
       bat "mvn deploy"
			}}
		
	  stage('Build our image') {
			steps {
			script {
				dockerImage = docker.build registry  }}}
	stage('Deploy our image') {
			steps { 
			script  {
				bat " docker logout "
				bat " docker login -u ines18 -p ines123456 "
				bat "docker build -t devops ."
			
			bat "docker tag devops  ines18/devops:1"
			
			bat "docker push  ines18/devops:1"
					}
				 }
			}
		}
	}
	