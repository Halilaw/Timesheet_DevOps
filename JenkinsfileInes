pipeline 
   {
   environment {
		registry = "timesheet_devops1"
		registryCredential = 'ines18'
		dockerImage = '' }
		
         agent any
stages {
      stage("Cloning Git") {
      steps {
      git branch: 'ines', url: 'https://github.com/Halilaw/Timesheet_DevOps.git'
            }}
              stage("Build") {
       steps {
       
       bat "mvn clean install"
             }}

      stage("Unit test with Junit") {
       steps {
       
       bat "mvn test"
             }}
    
	  stage("Statistic Test with Sonar") {
       steps{
		bat "mvn sonar:sonar "		
			}}
	  stage ("Maven clean") {    
       steps {
         bat "mvn clean package "
			}}

      stage("Artefact Deploy with nexus") {
      steps {
       bat "mvn deploy"
			}}
		
	  stage('Building Image') {
			steps {
			script {
				dockerImage = docker.build registry}}}
	stage('Deploying Image') {
			steps { 
			script  {
				docker.withRegistry( '', registryCredential ) {
				dockerImage.push()}
					}
				 }
			}
		}
	}